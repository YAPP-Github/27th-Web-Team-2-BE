<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="logback-appender.xml"/>

    <root level="INFO">
        <appender-ref ref="CLOUD_WATCH_CONSOLE"/>
        <appender-ref ref="CONSOLE_FILE"/>
    </root>

    <logger name="com.nomoney.support.logging.ApiLoggingFilter" level="INFO" additivity="false">
        <appender-ref ref="CLOUD_WATCH_TRANSACTION"/>
        <appender-ref ref="API_FILE"/>
    </logger>

    <logger name="org.hibernate" level="ERROR"/>
    <logger name="org.springframework.web" level="INFO"/>
</configuration>
